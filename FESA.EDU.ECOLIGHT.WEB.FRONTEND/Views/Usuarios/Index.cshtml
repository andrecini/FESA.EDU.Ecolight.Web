@{
    ViewData["Title"] = "Detalhes";
}

<div class="card w-100">
    <div class="card-body">
        <h4 class="card-title m-0 fw-bold">Detalhes do Dispositivo</h4>

        <hr class="my-2" />

        <div class="row">
            <div class="col">
                <div class="mb-2">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="nome" placeholder="Digite seu Nome" value="André" readonly />
                </div>
            </div>
            <div class="col">
                <div class="mb-2">
                    <label for="sobrenome" class="form-label">Sobrenome</label>
                    <input type="text" class="form-control" id="sobrenome" placeholder="Digite seu Sobrenome" value="Cini" readonly />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="mb-2">
                    <label for="cpf" class="form-label">CPF</label>
                    <input type="text" class="form-control" id="cpf" placeholder="Digite seu CPF" value="123.456.789-10" readonly />
                </div>
            </div>
            <div class="col">
                <div class="mb-2">
                    <label for="nascimento" class="form-label">Data de Nascimento</label>
                    <input type="date" class="form-control" id="nascimento" value="2023-10-30" readonly />
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col">
                <div class="mb-2">
                    <label for="celular" class="form-label">Celular</label>
                    <input type="text" class="form-control" id="celular" value="(11) 98172-4993" placeholder="Digite seu Celular" />
                </div>
            </div>
            <div class="col">
                <div class="mb-2">
                    <label for="uf" class="form-label">UF</label>
                    <select class="form-select">
                        <option value="1" selected>SP</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="mb-2">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" value="andrevpcini@gmail.com" placeholder="Digite seu email" />
        </div>

        <div class="row">
            <div class="col">
                <div class="mb-2">
                    <label for="password" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="senha" value="12345678" placeholder="Digite seu senha" />
                </div>
            </div>
            <div class="col">
                <div class="mb-2">
                    <label for="password" class="form-label">Confirmação</label>
                    <input type="password" class="form-control" id="senha" value="12345678" placeholder="Digite seu senha" />
                </div>
            </div>
        </div>

        <a asp-asp-controller="Home" asp-action="Index" class="btn btn-success w-100 mb-2">Cadastrar</a>

    </div>
</div>
