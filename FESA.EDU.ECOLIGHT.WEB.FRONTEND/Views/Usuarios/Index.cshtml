@{
    ViewData["Title"] = "Detalhes";
}

<div class="card w-100">
    <form class="w-100 h-100" asp-action="Editar" asp-controller="Usuarios">
        <div class="card-body">
            <h4 class="card-title m-0 fw-bold">Detalhes do Dispositivo</h4>

            <hr class="my-2" />

            <input type="hidden" value="1" name="Id" />

            <div class="row">
                <div class="col">
                    <div class="mb-2">
                        <label for="nome" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="nome" placeholder="Digite seu Nome" value="André" name="Nome" readonly />
                    </div>
                </div>
                <div class="col">
                    <div class="mb-2">
                        <label for="sobrenome" class="form-label">Sobrenome</label>
                        <input type="text" class="form-control" id="sobrenome" placeholder="Digite seu Sobrenome" value="Cini" name="Sobrenome" readonly />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="mb-2">
                        <label for="cpf" class="form-label">CPF</label>
                        <input type="text" class="form-control" id="cpf" placeholder="Digite seu CPF" value="123.456.789-10" name="Cpf" readonly />
                    </div>
                </div>
                <div class="col">
                    <div class="mb-2">
                        <label for="empresa" class="form-label">Empresa</label>
                        <select class="form-select" name="EmpresaId">
                            <option value="1" selected>Ecolight</option>
                        </select>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <div class="mb-2">
                        <label for="celular" class="form-label">Celular</label>
                        <input type="text" class="form-control" id="celular" value="(11) 98172-4993" placeholder="Digite seu Celular" name="Celular"/>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-2">
                        <label for="uf" class="form-label">UF</label>
                        <select class="form-select" name="Uf">
                            <option value="1" selected>SP</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" value="andrevpcini@gmail.com" placeholder="Digite seu email" name="Email"/>
            </div>

            <div class="row">
                <div class="col">
                    <div class="mb-2">
                        <label for="password" class="form-label">Senha</label>
                        <input type="password" class="form-control" id="senha" value="12345678" placeholder="Digite seu senha" name="Senha"/>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-2">
                        <label for="password" class="form-label">Confirmação</label>
                        <input type="password" class="form-control" id="senha" value="12345678" placeholder="Digite seu senha" name="Confirmacao"/>
                    </div>
                </div>
            </div>

            <input type="submit" class="btn btn-success w-100 mb-2" value="Cadastrar" />

        </div>
    </form>
</div>
