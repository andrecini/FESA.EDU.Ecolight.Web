@model AutomacaoViewModel

@{
    ViewData["Title"] = "Automações";
}

<div class="card w-100 my-auto">
    <form class="w-100 h-100 p-0 m-0" asp-action="Editar" asp-controller="Automacoes">

        <input type="hidden" value="1" name="Id"/>

        <div class="card-body">
            <h4 class="card-title m-0 fw-bold">Cadastro de Automação</h4>
            <span class="card-subtitle mb-2 text-muted">Insira os dados da automação</span>

            <hr class="my-2" />

            <div class="mb-2">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nome" placeholder="Digite um Nome para a automação" name="Nome" value="@Model.Nome"/>
            </div>

            <div class="row">
                <div class="col">
                    <div class="mb-2">
                        <label for="inicio" class="form-label">Horário Início</label>
                        <input type="time" class="form-control" id="inicio" placeholder="Digite o Horário de Início" name="Inicio" value="@Model.Inicio"/>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-2">
                        <label for="fim" class="form-label">Horário Fim</label>
                        <input type="time" class="form-control" id="fim" placeholder="Digite o Horário de Fim" name="Fim" value="@Model.Fim"/>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="mb-2">
                        <label for="inicio" class="form-label">Brilo Padrão (%)</label>
                        <input type="number" class="form-control" id="inicio" placeholder="Digite o valor do Brilho Padrão" min="0" max="100" name="Brilho" value="@Model.Brilho"/>
                    </div>
                </div>
                <div class="col">
                    <label for="uf" class="form-label">Dispositivo</label>
                    <select class="form-select" name="DispositivoId">
                        <option value="@Model.DispositivoId">Dispositivo @Model.DispositivoId</option>                       
                    </select>
                </div>
            </div>

            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" value="@Model.Ativo" name="Ativo">
                <label class="form-check-label" for="flexSwitchCheckDefault">Automação Ativa</label>
            </div>

            <div class="d-flex align-items-center justify-content-end w-100">
                <a asp-controller="Automacoes" asp-action="Index" class="btn btn-secondary mb-2 me-2">Cancelar</a>
                <input type="submit" class="btn btn-success mb-2" value="Salvar" />
            </div>

        </div>
    </form>
</div>
