@model DispositivoViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<div class="card w-100 my-auto">
    <form class="w-100 h-100 p-0 m-0" asp-action="Editar" asp-controller="Dispositivos">

        <input type="hidden" value="1" name="Id" />

        <div class="card-body">
            <h4 class="card-title m-0 fw-bold">Detalhes do Dispositivo</h4>
            <span class="card-subtitle mb-2 text-muted">Insira os dados do dispositivo</span>

            <hr class="my-2" />

            <div class="mb-2">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nome" placeholder="Digite um Nome para o dispositivo" name="Nome" value="@Model.Nome"/>
            </div>

            <div class="row">
                <div class="col">
                    <div class="mb-2">
                        <label for="codigo" class="form-label">Código</label>
                        <input type="text" class="form-control" id="codigo" placeholder="Digite o Código do dispositivo" name="Codigo" value="@Model.Codigo"/>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-2">
                        <label for="quantidade" class="form-label">Quantidade de lâmpadas</label>
                        <input type="number" class="form-control" id="sobrenome" placeholder="Digite quantidade de lâmpadas conectadas" name="Quantidade" value="@Model.Quantidade" />
                    </div>
                </div>
            </div>

            <div class="mb-2">
                <label for="descricao" class="form-label">Digite uma descrição para esse dispositivo</label>
                <textarea class="form-control" name="Descricao">@Model.Descricao</textarea>
            </div>

            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" value="@(Model.Ativo == "Active" ? true : false)" name="Ativo">
                <label class="form-check-label" for="flexSwitchCheckDefault">Dispositivo Ativo</label>
            </div>

            <div class="d-flex align-items-center justify-content-end w-100">
                <a asp-controller="Dispositivos" asp-action="Index" class="btn btn-secondary mb-2 me-2">Cancelar</a>
                <input type="submit" class="btn btn-success mb-2" value="Salvar" />
            </div>

        </div>
    </form>
</div>
